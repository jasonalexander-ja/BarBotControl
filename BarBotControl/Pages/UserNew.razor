@using BarBotControl.Exceptions.SudoUser
@inherits AuthedPageBase
@page "/UserNew"

@inject SudoUserService UserService
@inject ISnackbar Snackbar
@inject NavigationManager Navigation

<PageTitle>New User</PageTitle>

<MudGrid Class="pb-2" Spacing="0" Justify="Justify.Center">
    <MudItem xs="12" sm="7">
        <MudText Typo="Typo.h6" Class="d-flex align-center px-1">
            <MudIconButton 
                Icon="@Icons.Material.Filled.ArrowBack"
                aria-label="Go Back"
                OnClick=@(() => Navigation.NavigateTo("/Users"))
                Size="Size.Medium"
                Color="Color.Secondary"
            />
            New User
        </MudText>
    </MudItem>
</MudGrid>

<MudForm @ref="Form">
    <EditForm Model="@UsernamePassword" OnValidSubmit="OnValidSubmit">
        <MudGrid Justify="Justify.Center">
            <MudItem xs="12" sm="7">
                <MudCard>
                    <MudCardContent>
                        <MudGrid Spacing="1">
                            <MudItem md="6" xs="12">
                                <MudTextField 
                                    T="string" 
                                    Label="Username" 
                                    @bind-Value="UsernamePassword.UserName" 
                                    For=@(() => UsernamePassword.UserName)
                                    Variant="Variant.Filled"
                                />
                            </MudItem>
                            <MudItem md="6" xs="12">
                                <MudTextField 
                                    T="string" 
                                    Label="Password" 
                                    Required="true"
                                    InputType="InputType.Password"
                                    @bind-Value="UsernamePassword.Password" 
                                    For=@(() => UsernamePassword.Password)
                                    Variant="Variant.Filled"
                                />
                            </MudItem>
                        </MudGrid>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudGrid>
        <MudGrid Justify="Justify.Center" Class="pt-2">
            <MudItem xs="12" sm="7">
                <MudGrid Justify="Justify.FlexStart" Spacing="1">
                    <MudItem md="4" sm="6" xs="12">
                        <MudButton 
                            Variant="Variant.Filled" 
                            aria-label="Save edit"
                            Color="Color.Primary"
                            ButtonType="ButtonType.Submit"
                            DisableElevation="true" 
                            FullWidth="true"
                        >
                            Save
                        </MudButton>
                    </MudItem>
                    <MudItem md="4" sm="6" xs="12">
                        <MudButton 
                            Variant="Variant.Filled" 
                            Color="Color.Secondary"
                            aria-label="Go Back"
                            OnClick=@(() => Navigation.NavigateTo("/Users"))
                            DisableElevation="true" 
                            FullWidth="true"
                        >
                            Back 
                        </MudButton>
                    </MudItem>
                </MudGrid>
            </MudItem>
        </MudGrid>
    </EditForm>
</MudForm>


@code {
    MudForm Form;
    public UsernamePassword UsernamePassword { get; set; } = new UsernamePassword();

    private async Task OnValidSubmit(EditContext context)
    {
        await Form.Validate();
        if (!Form.IsValid)
        {
            Snackbar.Add("Ensure all fields are correctly filled out. ", Severity.Warning);
            return;
        }
        try
        {
            var newUser = await UserService.AddUser(UsernamePassword.UserName, UsernamePassword.Password);
            Snackbar.Add("User created. ", Severity.Success);
            Navigation.NavigateTo("/Users");
        }
        catch (SudoUserExistsException)
        {
            Snackbar.Add("There is already a user by this name.  ", Severity.Error);
        }
        catch
        {
            Snackbar.Add("Something went wrong there, go yell at Jason. ", Severity.Error);
        }
    }
}
