@using BarBotControl.Exceptions.SudoUser
@inherits AuthedPageBase
@page "/ModuleNew"

@inject ModuleService ModuleService
@inject ISnackbar Snackbar
@inject NavigationManager Navigation

<EditForm Model="@Model" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator/>
    <MudGrid Justify="Justify.Center">
        <MudItem xs="12" sm="7">
            <MudCard>
                <MudCardContent>
                    <MudText Typo="Typo.h6" Class="d-flex align-center">
                        <MudIconButton 
                            Icon="@Icons.Material.Filled.ArrowBack"
                            aria-label="Go Back"
                            OnClick=@(() => Navigation.NavigateTo("/Modules"))
                            Size="Size.Small"
                            Color="Color.Secondary"
                        />
                        New Module
                    </MudText>
                    <MudGrid Spacing="1">
                        <MudItem md="6" xs="12">
                            <MudTextField 
                                Label="Name"
                                @bind-Value="Model.Name" 
                                For="@(() => Model.Name)"
                            />
                        </MudItem>
                        <MudItem md="6" xs="12">
                            <MudNumericField  
                                Label="Channel"
                                @bind-Value="Model.Channel" 
                                For="@(() => Model.Channel)"
                            />
                        </MudItem>
                        <MudItem md="6" xs="12">
                            <MudCheckBox 
                                @bind-Value="Model.IsActive"
                                Label="Is Active"
                                Size="Size.Small"
                                Color="Color.Secondary"
                                For=@(() => Model.IsActive)
                            />
                        </MudItem>
                    </MudGrid>
                </MudCardContent>
                <MudCardActions Class="d-flex px-4 pb-4 gap-2">
                    <MudButton 
                        Variant="Variant.Filled" 
                        aria-label="Create module"
                        ButtonType="ButtonType.Submit"
                        Color="Color.Primary"
                        DisableElevation="true" 
                    >
                        Create
                    </MudButton>
                    <MudButton 
                        Variant="Variant.Filled" 
                        Color="Color.Secondary"
                        aria-label="Go Back"
                        OnClick=@(() => Navigation.NavigateTo("/Modules"))
                        DisableElevation="true" 
                    >
                        Back 
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</EditForm>


@code {
    public ModuleModel Model { get; set; } = new ModuleModel();

    private async Task OnValidSubmit(EditContext context)
    {
        try
        {
            var result = await ModuleService.CreateModule(Model);
            Snackbar.Add("Successfully created module. ", Severity.Success);
            Navigation.NavigateTo($"/Module/{result.ModuleId}");
        }
        catch
        {
            Snackbar.Add("Something went wrong there, go yell at Jason. ", Severity.Error);
        }
    }
}
